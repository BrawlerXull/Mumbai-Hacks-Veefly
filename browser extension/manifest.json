{
  "manifest_version": 3,
  "name": "Text Selection Chat",
  "version": "1.0",
  "description": "Shows a chat icon when text is selected.",
  "permissions": ["activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["content/styles.css"],
      "js": ["content/content.js"]
    }
  ],
  "host_permissions": [
    "http://localhost:6000/*",
    "http://127.0.0.1:6000/*",
    "https://ntq5xfqh-6000.inc1.devtunnels.ms/*"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
